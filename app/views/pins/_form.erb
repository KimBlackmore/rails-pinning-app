<div class = "form">
  <%= form_for @pin, {multipart: true} do |f| %>
    <div class="container-fluid">
      <div class="row">
        <div class="form-group col-md-6">
          <label for="pin_title"> Title </label><br>
          <%= f.text_field(:title,{ :class => 'form-control'}) %>
        </div>

        <div class="form-group col-md-6">
          <label for="pin_category_id"> Category </label><br>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: true},{ :class => 'form-control'} ) %>
        </div> 

      </div>

      <div class="row">
        <div class="form-group col-md-12"   > 
          <label for="pin_text"> Text </label><br>
          <%= f.text_area( :text, {:rows => "4", :class => 'form-control'} ) %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-6">
          <label for="pin_url"> URL </label><br>
          <%= f.text_field :url,{ :class => 'form-control'}  %>
        </div>

        <div class="form-group col-md-6">
          <label for="pin_slug"> Slug </label><br>
          <%= f.text_field :slug,{ :class => 'form-control'}  %> 
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-12">
          <label for "pin_image"> Image </label><br>
          <%= f.file_field :image,{ :class => 'form-control'} %>
        </div>
      </div>

      <div class="form-group" >
        <%= f.submit ( { :class => 'btn btn-default'} ) %>
      </div>
    </div>
  <% end %>
</div>

<% if !@errors.nil? %>
  <div class= "error">
  <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved: </label>
  <ul>
    <% @errors.full_messages.each do |msg| %>
      <li> <%= "#{msg}" %> </li>
    <% end %>
  </ul>
  </div>
<% end %>

