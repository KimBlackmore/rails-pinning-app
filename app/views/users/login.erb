
<div class="header">
	<h1>Login</h1>
</div>

<% if !@errors.nil? %>
  <div class= "error">
    <%= "#{@errors}"  %>
  </div>
<% end %>


<%= form_tag '/login' %>

 <div class="field">
    <input id="email" name="email" type="email" value="Your email address" />
  </div>
  <div class="field">
    <input id="secret" name="secret" type="password" value="Your password" />
  </div>
  <div class="actions">
    <input name="commit" type="submit" value="Submit" />
  </div>


<%= link_to 'Back', users_path %>
